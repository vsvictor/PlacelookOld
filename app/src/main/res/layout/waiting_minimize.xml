<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rlMinimize">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/waitin_minimize_top"
        android:layout_marginLeft="@dimen/waitin_minimize_text_left"
        android:layout_marginRight="@dimen/waitin_minimize_text_right"
        android:text="@string/now_you_can_minimize"
        android:id="@+id/tvMinimize"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/waitin_minimize_textsize" />

    <RelativeLayout
        android:id="@+id/bMinimize"
        android:layout_width="@dimen/warning_button_width"
        android:layout_height="@dimen/warning_button_height"
        android:layout_below="@id/tvMinimize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/gray_button">

        <TextView
            android:id="@+id/tvMinimizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/minimize"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>